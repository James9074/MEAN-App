<hr>
<div class="col-xs-6">
	<div class="row">
		<div class="col-xs-12">
			<h2 style="margin-bottom:30px;">{{pageHeader}}</h2>
		</div>
	</div>	
    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
    {{/if}}

	{{#if error}}
		<div class="alert alert-danger">{{error}}</div>
	{{/if}}
	<form id="resetPasswordForm" method="post">
        <div class="form-group row">
            <div class="col-xs-5">
                <label for="password">Password:</label>
            </div>
            <div class="col-xs-7">
                <input class="form-control" id="password" name="password" type="password">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-xs-5">
                <label for="confirmPassword">Confirm password:</label>
            </div>
            <div class="col-xs-7">
                <input class="form-control" id="confirmPassword" name="confirmPassword" type="password">
            </div>
        </div>
		<div class="row">
			<div class="col-xs-9">
			</div>
			<div class="col-xs-3">
				<input type="submit" class="btn" value="Submit"/>
				</div>
		</div>
	</form>
</div>
<div class="col-xs-1" style="border-right: solid 1px #eee;height:350px;"></div>
<div class="col-xs-5 sidebar">
	<div class="sidebarQuote">
		<h3>'But when you give to the needy, do not let your left hand know what your right hand is doing.'</h3>
		<span>Matthew 6:3</span>
	</div>
</div>